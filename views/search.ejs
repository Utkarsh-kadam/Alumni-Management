        <title>Alumni</title>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"> </script> 
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <style>
            body{
              background-color: #192329;
            }
           
            th,tr{
                border: solid black;
                text-align: center;
                padding: 10px;
               
            }
            h1{
                background-color:#559c95 ;
                border-radius: 3px;
                padding: 7px;
                color: black;
                text-align: center;
            }
            a{
                color: black;
                text-decoration: none;
                font-size: larger;
                background-color: #559c95;
                padding: 5px;
                border-radius: 3px;
                align-items: center;
            }
            a:hover{
                color: black;
            }
            img{
                height: 22px;
                width: 22px;
                align-self: center;
            }
            input{
              border: 2px solid;
              border-radius: 5px;
              padding: 10px;
              
            }
            tr:hover{
                background-color: rgb(236, 223, 223);
            }
            
           
        </style>
    </head>
    <body>
        <div class="container">
            <br>
            <h1 > Alumni Management System </h1>
            <br>

                
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div style="margin: 10px;"><h3>Alumni Search</h3>
                          <br>

                          <form action="/search/src">

                          <input type="text" placeholder="Search by PRN OR Year" name="PRN">&nbsp;&nbsp;
                          <input type="text" placeholder="Search by Name" name="name">&nbsp;&nbsp;
                          <input type="text" placeholder="Search by CollegeID" name="college_id">
                          <button class="btn btn-success  float-end" type="submit" style="margin-right:20px;width:100px"><i class="fa fa-search "></i> Search</button>

                        </form>

                        </div>
                        <div class="col" ></div>
                      
                    </div>
              
                </div>
                <br>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <tr>
                                <th>PRN</th>
                                <th>Name</th>
                                <th>College ID</th>
                                <th>Course ID</th>
				                <th>Email</th>
				                <th>Current Company</th>
				                <th>City</th>
                                <th>
                                    Options
                                </th>
                            </tr>
                            <%
                            if(show_alumni.length > 0)
                            {
                                show_alumni.forEach(function(data){
                            %>
                            <tr>
                                <td><%= data.PRN %></td>
                                <td><%= data.name %></td>
                                <td><%= data.college_id %></td>
                                <td><%= data.course_id %></td>
                                <td><%= data.email %></td>
				                <td><%= data.current_company %></td>
				                <td><%= data.city %></td>
                                <th>
                                    <a href="/show_alumni/edit/<%= data.PRN %>" class="btn btn-primary btn-sm">Edit</a>
                                    <a id="del" href="/show_alumni/del/<%= data.PRN %>" class="btn btn-primary btn-sm">Delete</a>

                                </th>
                            </tr>
                            <%
                                });
                            }
                            else
                            {
                            %>
                            <tr>
                                <td colspan="8">No Data Found</td>
                            </tr>
                            <%
                            }
                            %>
                        </table>
                    </div>
                </div>
            </div>
